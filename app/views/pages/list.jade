extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 电影名称
                        th 分类
                        th 国家
                        th 语言
                        th 主演
                        th 评分
                        th 录入时间
                        th 访问量pv
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in movies
                        tr(class='item-id-#{item._id}')
                            td #{item.title}
                            td #{item.category.name}
                            td #{item.country}
                            td #{item.language}
                            td #{item.actors}
                            td #{item.score}
                            td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
                            td #{item.pv}
                            td: a(href='/movie/#{item._id}', target='_blank')
                                    | 查看
                            td: a(href='/admin/movie/update/#{item._id}', target='_blank')
                                    | 修改
                            td
                                button.btn.btn-danger.del(type='button', data-id='#{item._id}')
                                    | 删除
    script(src='/js/admin.js')