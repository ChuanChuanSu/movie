extends ../layout

block content
    .container
        .row
            each cat in categories
                .panel.panel-default
                    .panel-heading
                        a(href='/results?cat=#{cat._id}&p=1', target='_blank') #{cat.name}
                    .panel-body
                        if cat.movies && cat.movies.length > 0
                            each item in cat.movies
                                .col-md-2.col-sm-2
                                    .thumbnail
                                        a(href='/movie/#{item._id}', target='_blank')
                                            if item.poster.indexOf('https') > -1
                                                img(src='#{item.poster}', alt='#{item.title}')
                                            else
                                                img(src='/upload/#{item.poster}', alt='#{item.title}')
                                        .captain
                                            h3= item.title
                                            p
                                                a.btn.btn-primary(href='/movie/#{item._id}', role='button', target='_blank')
                                                    | 观看预告片